<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:orientation="vertical"
    android:background="@color/background"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="15dp"
        android:paddingVertical="5dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id = "@+id/textview4"
            android:text = "Let's first check if your fingers are
\nbeing recognized properly\n"


            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/gray"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id = "@+id/textview5"
            app:layout_constraintTop_toBottomOf="@id/textview4"
            android:text = " Put your hand under the camera and\n
Follow the point below with your index finger"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/gray"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/preview_display_layout"
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <ImageView
            android:id="@+id/imageView_pointer"
            android:layout_marginVertical="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="80dp"
        android:paddingVertical="5dp"
        android:gravity="center"

        >

        <Button
            android:id="@+id/button_start_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:text="Start" />

        <Button
            android:id="@+id/button_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>
